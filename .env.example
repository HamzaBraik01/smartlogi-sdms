# ===============================================
# Variables d'environnement pour SmartLogi SDMS
# Copier ce fichier en .env et modifier les valeurs
# ===============================================

# -------- Base de données PostgreSQL --------
POSTGRES_DB=smartlogi_management
POSTGRES_USER=sdms_user
POSTGRES_PASSWORD=sdms_secure_password_2024
POSTGRES_PORT=5432

# -------- API Spring Boot --------
API_PORT=8080
API_VERSION=latest
SPRING_PROFILE=prod

# -------- JWT Configuration --------
# IMPORTANT: Générer une clé secrète forte pour la production (minimum 32 caractères)
# Exemple: openssl rand -base64 32
JWT_SECRET=votre-cle-secrete-tres-longue-minimum-32-caracteres-base64-change-me
JWT_EXPIRATION=86400000

# -------- Logging --------
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO

# -------- CORS --------
CORS_ORIGINS=http://localhost:4200,http://localhost:3000,http://localhost:8080

